        <Label Content="Номер телефона" HorizontalAlignment="Left" Margin="299,160,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox x:Name="FioTeacherText" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="261,132,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="182"/>
        <TextBox x:Name="PhoneTeacherText" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="261,191,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="182"/>
        <Button x:Name="ButtonTeacher" Grid.ColumnSpan="2" Content="Добавить" HorizontalAlignment="Left" Margin="261,225,0,0" VerticalAlignment="Top" Width="182" Height="38" FontSize="20"/>




    </Grid>
</Window>
