        <TextBox x:Name="NumTeacherTexted" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="23" Margin="261,73,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="182"/>
